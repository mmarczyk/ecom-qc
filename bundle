$bundle = function($src, $order, $dst) {
    $bundle = [];

    foreach($order as $file) {
        $bundle[] = file_get_contents($src.$file);
    }

    file_put_contents($dst, implode("\n", $bundle));
};

$bundle($src, $orderJS, $dstJS);
$bundle($src, $orderCSS, $dstCSS);